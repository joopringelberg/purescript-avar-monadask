#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/purescript@0.11.7/node_modules/purescript/node_modules:/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/purescript@0.11.7/node_modules:/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/purescript@0.11.7/node_modules/purescript/node_modules:/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/purescript@0.11.7/node_modules:/Users/joopringelberg/Code/perspectives-monorepo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
"$basedir/../purescript/purs.bin"   "$@"
exit $?
